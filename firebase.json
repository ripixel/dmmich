{
    "hosting": {
        "public": "./public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "trailingSlash": false,
        "headers": [
            {
                "source": "**/*.@(html|json)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000, immutable"
                    }
                ]
            }
        ]
    }
}